# ESP
apiVersion: apps/v1
kind: Deployment
metadata:
  name: mixer-grpc
  namespace: mixer
spec:
  template:
    spec:
      containers:
        - name: esp
          image: gcr.io/endpoints-release/endpoints-runtime:1
          args: [
              "--service", "<SERVICE_NAME>",
              "--http_port", "8081",
              "--backend", "grpc://127.0.0.1:12345",
              "--cors_preset", "basic",
              "--rollout_strategy", "managed",
              "--healthz", "healthz",
              "--service_account_key", "/var/secrets/google/mixer-robot-key.json",
            ]
          resources:
            requests:
              memory: "<ESP_MEM_REQ>"
              cpu: "<ESP_CPU_REQ>"
            limits:
              memory: "<ESP_MEM_LIMIT>"
              cpu: "<ESP_CPU_LIMIT>"
          # HEALTH CHECK START
          # Used by ingress to perform health check
          readinessProbe:
            httpGet:
              path: /healthz
              port: 8081
          ports:
            - containerPort: 8081
          volumeMounts:
            - name: google-cloud-key
              mountPath: /var/secrets/google
              readOnly: true
